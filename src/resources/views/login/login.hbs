<form action="/login" method="POST" class="login-form">
    <h3 class="heading mb-4">Đăng nhập</h3>

    <div class="form-group mb-4">
        <input type="text" id="username" name="username" placeholder="Tên tài khoản" class="form-control">
        <span class="form-message">Vui lòng nhập tài khoản</span>
    </div>

    <div class="form-group mb4">
        <input type="password" id="password" name="password" placeholder="Mật khẩu" class="form-control">
        <span class="form-message">Vui lòng nhập mật khẩu</span>
    </div>

    <button type="submit" class="form-submit">Đăng nhập</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        Validator({
            form: '.login-form',
            formGroupSelector: '.form-group',
            errorSelector: '.form-message',
            rules: [
                Validator.isRequired('#username', 'Vui lòng nhập tài khoản'),
                Validator.isRequired('#password', 'Vui lòng nhập mật khẩu'),
            ],
        });
    });
</script>